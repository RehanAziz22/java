package com.mycompany.oop_se;

import java.util.Scanner;

public class convertcentigradetoFahrenheit {
    
// Java Program to Convert Celsius into Fahrenheit 

    public static void main(String[] args) { 
    // assigning the values of Celsius and fahrenhiet 
        double celsius = 17.0, fahrenheit = 6.2; 
		
	// formula for conversion celsius to fahrenheit 
	fahrenheit = (celsius * 9/5) + 32; 
	System.out.println( "  temperature in fahrenheit:" + fahrenheit); 
	
    // formula for conversion celsius to fahrenheit 
	celsius = (fahrenheit - 32) * 5/9; 
	System.out.println( " temperature in celsius:" + celsius ); 
	        
    } 
}




